{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "A Go-based API for managing and executing workflow automations.\nProvides endpoints to retrieve workflow definitions, execute workflows, and view execution history.",
        "title": "Workflow Engine API",
        "contact": {
            "name": "API Support",
            "url": "https://github.com/albert-saclot/workflow-go-challenge"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:8086",
    "basePath": "/api/v1",
    "paths": {
        "/api/v1/workflows/{id}": {
            "get": {
                "description": "Retrieves a workflow by ID including all nodes and edges",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "workflows"
                ],
                "summary": "Get workflow definition",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "Workflow ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/workflow.WorkflowResponse"
                        }
                    },
                    "400": {
                        "description": "invalid workflow id",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "workflow not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/v1/workflows/{id}/execute": {
            "post": {
                "description": "Executes a workflow with the provided form data and returns execution results",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "workflows"
                ],
                "summary": "Execute a workflow",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "Workflow ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Execution request with form data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/workflow.ExecuteWorkflowRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/workflow.ExecutionResponse"
                        }
                    },
                    "400": {
                        "description": "invalid workflow id, invalid request body, or missing required fields",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "workflow not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/v1/workflows/{id}/executions": {
            "get": {
                "description": "Retrieves a list of past executions for a workflow",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "workflows"
                ],
                "summary": "Get workflow execution history",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "Workflow ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/workflow.ExecutionsListResponse"
                        }
                    },
                    "400": {
                        "description": "invalid workflow id",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "workflow not found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
